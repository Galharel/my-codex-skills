{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/prd_packet.schema.json",
  "title": "PRD Packet",
  "type": "object",
  "required": ["meta", "normalized_prd", "handoff_user_story_mapper", "tbd"],
  "additionalProperties": true,
  "properties": {
    "meta": {
      "type": "object",
      "required": ["spec_version", "title", "source_type"],
      "additionalProperties": true,
      "properties": {
        "spec_version": { "type": "string", "enum": ["1.0"] },
        "title": { "type": "string", "minLength": 1 },
        "source_type": { "type": "string", "enum": ["pdf", "gdoc", "md", "txt", "other"] },
        "source_link": { "type": "string" },
        "owners": { "type": "array", "items": { "type": "string" } },
        "date_created": { "type": "string" },
        "last_updated": { "type": "string" },
        "confidence_overall": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    },

    "normalized_prd": {
      "type": "object",
      "required": ["overview", "problem", "users", "goals", "scope", "assumptions_constraints", "journeys", "requirements", "edge_cases", "dependencies", "risks", "open_questions"],
      "additionalProperties": true,
      "properties": {
        "overview": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "summary": { "type": "string" },
            "context": { "type": "string" }
          }
        },
        "problem": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "problem_statement": { "type": "string" },
            "why_now": { "type": "string" }
          }
        },
        "users": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "personas": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["name"],
                "additionalProperties": true,
                "properties": {
                  "name": { "type": "string" },
                  "description": { "type": "string" },
                  "jobs_to_be_done": { "type": "array", "items": { "type": "string" } }
                }
              }
            },
            "actors_inferred": { "type": "boolean" }
          }
        },
        "goals": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "goals": { "type": "array", "items": { "type": "string" } },
            "success_metrics": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["metric"],
                "additionalProperties": true,
                "properties": {
                  "metric": { "type": "string" },
                  "how_measured": { "type": "string" },
                  "target": { "type": "string" }
                }
              }
            }
          }
        },
        "scope": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "in_scope": { "type": "array", "items": { "type": "string" } },
            "out_of_scope": { "type": "array", "items": { "type": "string" } }
          }
        },
        "assumptions_constraints": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "assumptions": { "type": "array", "items": { "type": "string" } },
            "constraints": { "type": "array", "items": { "type": "string" } }
          }
        },
        "journeys": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "steps"],
            "additionalProperties": true,
            "properties": {
              "name": { "type": "string" },
              "steps": { "type": "array", "items": { "type": "string" } }
            }
          }
        },
        "requirements": {
          "type": "object",
          "required": ["functional", "non_functional"],
          "additionalProperties": true,
          "properties": {
            "functional": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["id", "statement", "priority"],
                "additionalProperties": true,
                "properties": {
                  "id": { "type": "string", "pattern": "^FR-[0-9]{3}$" },
                  "statement": { "type": "string" },
                  "priority": { "type": "string", "enum": ["P0", "P1", "P2", "P3"] },
                  "acceptance_criteria": { "type": "array", "items": { "type": "string" } },
                  "related_journey": { "type": "string" },
                  "notes": { "type": "string" }
                }
              }
            },
            "non_functional": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["id", "statement", "category"],
                "additionalProperties": true,
                "properties": {
                  "id": { "type": "string", "pattern": "^NFR-[0-9]{3}$" },
                  "statement": { "type": "string" },
                  "category": { "type": "string", "enum": ["performance", "reliability", "security", "privacy", "usability", "maintainability", "compliance", "other"] },
                  "target": { "type": "string" },
                  "measurement": { "type": "string" }
                }
              }
            }
          }
        },
        "edge_cases": { "type": "array", "items": { "type": "string" } },
        "dependencies": { "type": "array", "items": { "type": "string" } },
        "risks": { "type": "array", "items": { "type": "string" } },
        "open_questions": { "type": "array", "items": { "type": "string" } }
      }
    },

    "handoff_user_story_mapper": {
      "type": "object",
      "required": ["actors", "epics", "stories", "linkage"],
      "additionalProperties": true,
      "properties": {
        "actors": { "type": "array", "items": { "type": "string" } },
        "epics": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "name"],
            "additionalProperties": true,
            "properties": {
              "id": { "type": "string", "pattern": "^EPIC-[0-9]{2}$" },
              "name": { "type": "string" },
              "goal_alignment": { "type": "array", "items": { "type": "string" } }
            }
          }
        },
        "stories": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "epic_id", "as_a", "i_want", "so_that", "priority"],
            "additionalProperties": true,
            "properties": {
              "id": { "type": "string", "pattern": "^US-[0-9]{3}$" },
              "epic_id": { "type": "string", "pattern": "^EPIC-[0-9]{2}$" },
              "as_a": { "type": "string" },
              "i_want": { "type": "string" },
              "so_that": { "type": "string" },
              "priority": { "type": "string", "enum": ["P0", "P1", "P2", "P3"] },
              "acceptance_criteria": { "type": "array", "items": { "type": "string" } }
            }
          }
        },
        "linkage": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "story_to_requirements": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["story_id", "requirement_ids"],
                "properties": {
                  "story_id": { "type": "string", "pattern": "^US-[0-9]{3}$" },
                  "requirement_ids": {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },

    "tbd": {
      "type": "object",
      "required": ["missing_fields", "assumptions_made", "questions"],
      "additionalProperties": true,
      "properties": {
        "missing_fields": { "type": "array", "items": { "type": "string" } },
        "assumptions_made": { "type": "array", "items": { "type": "string" } },
        "questions": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}
